<div class="container mt-5 p-2">
<h3 class="text-center mb-3"><%= @recipe.name %></h3>
<div class="row">
  <div class="col-8 mb-3">
  <h3>preparation time: <%= @recipe.preparation_time%></h3>
  <h3>cooking time: <%= @recipe.cooking_time%></h3>
  </div>
  <div class="col-4 text-end mb-3">
  <button class="btn btn-secondary">Public</button>
  </div>
  <div class="col-12 my-3">
  <p>Procedures</p>
  <p><%= @recipe.description%></p>
  </div>
  <div class="col-12 d-flex justify-content-between align-items-center">
  <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Generate Shopping List
</button>
  <button class="btn btn-secondary">Add Ingredients</button>
  </div>
  <div class="col-12 mt-4">
  <table class="table table-striped table-bordered border-danger">
  <thead>
    <tr>
       <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
   <% @foods.each do |f| %>
    <tr>
      <td><%= f.name %></td>
      <td><%= f.measurement_unit %></td>
      <td><%= f.price %></td>
       <td><%=button_to 'Modify Remove', food_path(f.id), :method => :delete, class: 'btn btn-outline-danger'%></td>
    </tr>
     <%end%>
  </tbody>
</table>
  </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Generate Shopping List</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Choose an Inventory to use..</p>
        <div class="row">
        <div class="col-6">
        <select name="cars" id="cars">
          <option value="volvo">Inventory 1</option>
          <option value="saab">Inventory 2</option>
          <option value="mercedes">Inventory 3</option>
          <option value="audi">Inventory 4</option>
        </select>
        </div>
        <div class="col-6 text-center">
       <%= link_to "Generate", shopping_list_index_path,  class: "btn btn-secondary"%>

        </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>