
<%= form_with model: @recipe, url: recipe_index_path, method: :post, local: true do  |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :preparation_time %><br>
    <%= form.text_field :preparation_time %><br>
  </div>
  <div>
    <%= form.label :cooking_time %><br>
    <%= form.text_field :cooking_time %><br>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>
  <div>
    <%= form.submit 'save food' %>
  </div>
<% end %>